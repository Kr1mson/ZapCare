<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Agency_Signup"
    android:orientation="vertical"
    android:background="@drawable/bg">
    <View
        android:layout_width="wrap_content"
        android:layout_height="150sp"/>
    
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/card_view_agencySignup"
        android:layout_marginRight="30sp"
        android:layout_marginLeft="30sp"
        app:cardCornerRadius="28dp"
        app:cardBackgroundColor="@color/sec"
        
        android:layout_marginBottom="-20dp"
        >
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="30dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Registration"
                android:textStyle="bold"
                android:textColor="@color/prim"
                android:textSize="35sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="For Hospitals/Clinics"
                android:textColor="@color/black"
                android:textStyle="bold"
                />
            <View
                android:layout_width="wrap_content"
                android:layout_height="30dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Name"
                android:textColor="@color/black"
                android:textStyle="bold"
                />
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/AgencyNameLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                style="@style/LoginTextInputLayoutStyle"
                app:boxStrokeColor="@color/prim"

                >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/agency_edtxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/sec"
                android:textColor="@color/black"
                android:textColorHint="@color/black"

                android:inputType="text" />
            </com.google.android.material.textfield.TextInputLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Helpline Number"
                android:textColor="@color/black"
                android:textStyle="bold"
                />
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/helplineLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                style="@style/LoginTextInputLayoutStyle"
                app:boxStrokeColor="@color/prim"

                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/helpline_edtxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/sec"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"

                    android:inputType="phone" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/hiddenLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                style="@style/LoginTextInputLayoutStyle"
                app:boxStrokeColor="@color/prim"

                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/agency_signup_hidden_edtxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/sec"
                    android:inputType="text"
                    android:visibility="gone"
                    android:textColor="@color/black"

                    android:textColorHint="@color/black" />
            </com.google.android.material.textfield.TextInputLayout>
            <View
                android:layout_width="wrap_content"
                android:layout_height="20dp"/>

            <View
                android:layout_width="wrap_content"
                android:layout_height="20dp"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:src="@drawable/dotted"
                android:layerType="software" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Location"
                android:textColor="@color/black"
                android:textStyle="bold"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >



                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Latitude"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="@color/prim"
                        android:layout_marginTop="10sp"
                        />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/latLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        style="@style/LoginTextInputLayoutStyle"
                        app:boxStrokeColor="@color/prim"

                        >

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/tv_latitude"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/sec"
                            android:textColor="@color/black"
                            android:textColorHint="@color/black"
                            android:text="00.0000000"

                            android:inputType="textEmailAddress" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Longitude"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="@color/prim" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/longLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        style="@style/LoginTextInputLayoutStyle"
                        app:boxStrokeColor="@color/prim"

                        >

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/tv_longitude"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/sec"
                            android:textColor="@color/black"
                            android:textColorHint="@color/black"
                            android:text="00.0000000"
                            android:inputType="textEmailAddress" />
                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/bt_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:backgroundTint="#8B0000"
                    android:text="Get Current Location"
                    android:textColor="@color/sec"
                    app:cornerRadius="28dp"
                    android:layout_marginLeft="10sp"/>


            </LinearLayout>
            <View
                android:layout_width="wrap_content"
                android:layout_height="10dp"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:src="@drawable/dotted"
                android:layerType="software" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/agency_signup_button"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:backgroundTint="@color/prim"
                android:text="Save"
                android:textColor="@color/sec"
                app:cornerRadius="28dp" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="20dp"/>


        </LinearLayout>

        </ScrollView>

    </androidx.cardview.widget.CardView>

</LinearLayout>
